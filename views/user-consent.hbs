<html>
  <head>
    <meta charset='utf-8' />
    <title>Consent</title>
    <script
      src='https://code.jquery.com/jquery-3.6.0.min.js'
      integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4='
      crossorigin='anonymous'
    ></script>
  </head>
  <body>
    <form>
      <input type='hidden' id='scopes' value='{{scopes}}'/>
      <input type='hidden' id='clientId' value='{{clientId}}'/>
      <input type='hidden' id='afterConsentGoTo' value='{{afterConsentGoTo}}'/>
      <input type='button' value='Consent' onclick='consent()'/>
    </form>
    <script>
      function consent(){ 
        var afterConsentGoTo = document.getElementById('afterConsentGoTo').value;
        var scopes = document.getElementById('scopes').value;
        var clientId = document.getElementById('clientId').value;
        var requestObj = {
          scopes,
          clientId
        };
        $.post('/user/consent', requestObj).always(function(){
          window.location.replace(afterConsentGoTo);
        });
      }
    </script>
  </body>
</html>